{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML App",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-IC:/msys64/ucrt64/include",
                "-LC:/msys64/ucrt64/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-o",
                "sfml-app.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
